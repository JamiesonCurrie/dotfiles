set nocompatible

filetype off
call vundle#rc()
filetype plugin indent on

syntax on

set backspace=eol,start,indent
set hidden
set ignorecase smartcase
set hlsearch
set magic
set showmatch mat=2

set nobackup
set nowb
set noswapfile
set noerrorbells

set number
set nowrap
set autoindent smartindent
set wrapscan
set noexpandtab
set smarttab
set tabstop=4
set softtabstop=4

set wildmenu
set lazyredraw

" Folding
set foldenable
" set foldmethod=syntax
nnoremap <space> za

set showmode
" set cursorline
set mouse=a
set mousehide

